<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".volunteerregistration.VolunteerRegisterActivity">

    <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="20dp"
    >
        <EditText
                android:id="@+id/VolunteerRegister_NameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textColorHint="#B4B1B1"
                android:textColor="#ffffff"
                android:backgroundTint="#ffffff"
                android:layout_marginBottom="50dp"
        />

        <EditText
                android:id="@+id/VolunteerRegister_PhoneInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:textColorHint="#B4B1B1"
                android:textColor="#ffffff"
                android:backgroundTint="#ffffff"
                android:inputType="phone"
                android:layout_marginBottom="50dp"
        />

        <Button
                android:id="@+id/VolunteerSubmitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="#ffffff"
                android:onClick="volunteerRegistrationButtonClick"
                android:background="@drawable/bg_main_ic_button"

        />



    </LinearLayout>




</android.support.constraint.ConstraintLayout>