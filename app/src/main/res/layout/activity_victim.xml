<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".VictimActivity">

    <TextView
            android:id="@+id/Victim_be_safe_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Be Safe"
            android:textColor="#ffffff"
            android:textSize="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Victim_info_text_label"
    />

    <TextView
            android:id="@+id/Victim_info_text_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You will be soon contacted by a volunteer"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textAlignment="center"
            android:padding="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Victim_be_safe_label"
            app:layout_constraintBottom_toTopOf="@id/Victim_Delete_Button"
    />

    <Button
            android:id="@+id/Victim_Delete_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Request"
            android:textColor="#ff0000"
            android:textSize="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            app:layout_constraintTop_toBottomOf="@id/Victim_info_text_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Main_ICButton"
            android:background="@drawable/delete_button"
    />

    <Button
            android:id="@+id/Main_ICButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/information_center"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_main_ic_button"
            app:layout_constraintBottom_toBottomOf="parent"
    />

</android.support.constraint.ConstraintLayout>